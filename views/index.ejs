<%include partials/header%>
<div class="ui main text container">
    <div class="ui huge header">Blogs:</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <%for(var i=0; i<blogs.length; i++){%>
                <div class="item">
                    <div class="image">
                        <%if(blogs[i].image.length == 0){%>
                        <img class="ui centered rounded image" src="/images/default-blog.png" src="No image to show" />
                        <%} else{%>
                        <img class="ui centered rounded image" src="<%=blogs[i].image%>" src="<%=blogs[i].title%>'s image" />
                        <%}%>
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%=blogs[i]._id%>"><%=blogs[i].title%></a>
                        <div class="meta">
                            <span><%=blogs[i].created.toDateString()%></span>
                        </div>
                        <div class="description">
                            <p><%-blogs[i].body.substring(0, 100)%>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated teal button" href="/blogs/<%=blogs[i]._id%>">Read More...<i class="angle double right icon"></i></a>
                        </div>
                    </div>
                </div>
            <%}%>
        </div>
    </div>
</div>
<%include partials/footer%>